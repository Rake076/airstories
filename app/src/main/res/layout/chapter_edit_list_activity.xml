<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_chapters"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_below="@id/chapter_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_listview"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapters"
            android:layout_margin="16dp"
            android:background="@color/white"
            android:id="@+id/chapter_textview"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"/>

        <View
            android:layout_below="@id/chapter_textview"
            android:id="@+id/chapter_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#363636"/>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/write_chapter_btn"
            android:layout_marginVertical="16dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Add a Chapter"/>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>