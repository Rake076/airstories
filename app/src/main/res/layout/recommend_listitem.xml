<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:minHeight="170dp">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/lighterGrey"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/clown"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/image">

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/story_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:hint="Story Title" />


        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/recommendee_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:hint="Recommended By: "/>

        <TextView
            android:id="@+id/type_textview"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:text="Short Story" />





    </LinearLayout>
</RelativeLayout>